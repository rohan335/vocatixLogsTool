{
  "name": "vocatix-server-template",
  "version": "1.0.0",
  "description": "Typescript Express Server Template",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc-watch --onSuccess \"node ./dist/server.js\"",
    "start": "npm run-script build && node dist/server.js",
    "test": "jest --config=jest.config.json",
    "test-watch": "npm run-script test -- --watch",
    "lint": "eslint --ext .ts .",
    "lint-fix": "npm run-script lint -- --fix",
    "prettier": "prettier --write ./**/*.{ts,json}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo Linting... && npm run lint",
      "pre-push": "echo Testing... && npm run test"
    }
  },
  "keywords": [],
  "author": "",
  "license": "",
  "dependencies": {
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase-admin": "^9.5.0",
    "mongoose": "^5.11.18",
    "mongoose-unique-validator": "^2.0.3",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.2",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.2.2"
  }
}
